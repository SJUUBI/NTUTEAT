<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <shape>
            <solid
                android:color="#f5deb3" />
            <stroke
                android:width="1dp"
                android:color="#f5deb3" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#FCE6C9"
                android:centerColor="#FFF8DC"
                android:endColor="#FFFAF0"
                android:angle="270" />
            <stroke
                android:color="#f5deb3" />
            <corners
                android:radius="20dp" />  <!--邊角圓滑程度-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>